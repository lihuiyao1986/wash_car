                                                  shadowColor:0xc3c3c3
                                                 shadowRadius:2.f
                                                      bgColor:0xedf0f2
                                                 bgColorAlpha:1.0
                                                 cornerRadius:0
                                                shadowYOffset:1.f
                                                shadowXOffset:0.f];
